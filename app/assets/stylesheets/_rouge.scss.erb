<%= Rouge::Themes::Magritte.render(scope: '.highlight') %> 

pre.highlight {  
    overflow: auto;
    word-wrap: normal;
    white-space: pre;
    background-color: #f6ffff;
    padding: 0.5rem;
    margin: 0;
    border: 2px dashed #d6dddd;
}

div.highlight {
    margin-top: 10px;
    margin-bottom: 40px;
}

.highlight {
    background-color: #f8f8f8;
    .err, .nt {
    color: #999999;
    font-weight: bold;
    background-color: #f6ffff;
    }
    .na {
    color: #212529;
    }
    .vi, .mi, .no {
    color: #008080;
    font-weight: normal;
    }
    .s1, .s2, .sh, .si {
    color: #d14;
    font-weight: normal;
    }
    .nc {
    color: #445588;
    font-weight: bold;
    }
    .nf {
    color: #990000;
    font-weight: bold;
    }
    .nb {
    color: #0086B3;
    font-weight: normal;
    }
    .o, .kp {
    color: #000000;
    }
    .mf, .mi {
    color: #009999;
    }
    .ss {
    color: #990073;
    }
    .c {
    color: #999988;
    }
}

.ruby {
    .err {
    color: #a61717;
    }
    .c1 {
    color: #999988;
    }
}