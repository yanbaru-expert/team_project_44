<div class="base-container mw-md">
  <h2><%= @text.title %></h2>
  <div class="markdown" ><%= markdown(@text.content) %></div>
  <div id="text-<%= @text.id %>">
    <% if @text.read_by?(current_user) %>
      <%= render "read", text: @text %>
    <% else %>
      <%= render "unread", text: @text %>
    <% end %>
  </div>
</div>